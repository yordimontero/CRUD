@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">

    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Count</th>
        <th></th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <th>@Model.Rows[i][1]</th>
            <th>@Model.Rows[i][2]</th>
            <th>@Model.Rows[i][3]</th>
            <th>
                <a href="@Url.Action("Edit", "Product", new { @id = Model.Rows[i][0] })">Edit</a>
            </th>
            <th>
                <a href="@Url.Action("Delete", "Product", new { @id = Model.Rows[i][0] })">Delete</a>
            </th>
        </tr>
    }

</table>

<a href="@Url.Action("Create", "Product")">Add Product</a>

